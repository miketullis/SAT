@model SAT.DATA.EF.StudentStatus

@{
    ViewBag.Title = "Edit Student Status: " + Model.SSName;
}


<div class="card card-body max1000 drop">
    <h2 class="text-center pb-4">@ViewBag.Title</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal p-5">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.SSID)
            <div class="form-group inFix">
                @Html.LabelFor(model => model.SSName, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.SSName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SSName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group inFix">
                @Html.LabelFor(model => model.SSDescription, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.SSDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SSDescription, "", new { @class = "text-danger" })
            </div>
            <div class="form-group mb-0">
                <div class="text-right col-md-12 p-0 pt-4">
                    <input type="submit" value="Save" class="btn btn-primary btn80" />
                    @Html.ActionLink("Delete", "Delete", "StudentStatus", new { id = Model.SSID }, new { @class = "btn btn-primary btn80" })
                    @*@Html.ActionLink("Cancel", "Index", "StudentStatus", new { @class = "btn btn-primary btn80 mr-0" })*@
                    <a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-primary btn80 mr-0">Cancel</a>
                </div>
            </div>
        </div>
    }
</div>
