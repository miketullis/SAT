@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Delete Role";
}

<div class="card card-body max800 p-5 text-center">
    <h2 class="text-center pb-0">@ViewBag.Title</h2>
    <h3 class="text-center pb-4">@Model.Name</h3>

    <h3 class="text-danger pd-2">Are you sure you want to delete this Role? </h3>
    <p class="manage">Deleting this role will remove all users from this role.<br />It will NOT delete the users.</p>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions">
            <input type="submit" value="Yes" class="btn btn-primary btn80" />
            <a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-primary btn80">No</a>
        </div>
    }
</div>

