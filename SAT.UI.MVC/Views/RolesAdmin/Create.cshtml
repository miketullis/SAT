@model SAT.UI.MVC.Models.RoleViewModel

@{
    ViewBag.Title = "Create New Role";
}

<div class="card card-body max800 p-5 text-center">
    <h2 class="text-center pb-4">@ViewBag.Title</h2>
    <div class="divCenter">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control min350 text-center", placeholder="Role Name" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
                <div class="form-group">
                    <div class="pt-4">
                        <input type="submit" value="Create" class="btn btn-primary btn80" />
                        <a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-primary btn80">Cancel</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
