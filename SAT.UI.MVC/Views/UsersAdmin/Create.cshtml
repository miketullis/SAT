@model SAT.UI.MVC.Models.RegisterViewModel
@{
    ViewBag.Title = "Create New User";
}


<div class="card card-body max800 drop p-5">
    <h2 class="text-center pb-4">@ViewBag.Title</h2>
    <div class="divCenter">
        @using (Html.BeginForm("Create", "UsersAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-error" })
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control min350" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control min350" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control min350" })
            </div>
            <div class="form-group">
                <h4 class="text-center p-3">Select User Roles</h4>
                <div class=" text-center">
                    @foreach (var item in (SelectList)ViewBag.RoleId)
                    {
                        <span class="pl-3 pr-3">
                            <input type="checkbox" name="SelectedRoles" value="@item.Value" class="checkbox-inline" />
                            @Html.Label(item.Value, new { @class = "control-label" })
                        </span>
                    }
                </div>
            </div>
            <div class="form-group text-center">
                <div class="pt-4">
                    <input type="submit" class="btn btn-primary btn80" value="Create" />
                    <a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-primary btn80">Cancel</a>
                </div>
            </div>
        }
    </div>
</div>
