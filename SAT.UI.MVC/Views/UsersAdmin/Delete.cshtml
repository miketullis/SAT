@model SAT.UI.MVC.Models.ApplicationUser

@{
    ViewBag.Title = "Delete User";
}

<div class="card card-body max800 drop p-5 text-center">
    <h2 class="text-center pb-0">@ViewBag.Title</h2>
    <h3 class="text-center pb-0">@Model.UserName</h3>

    <h3 class="text-danger pt-3">Are you sure you want to delete this User?</h3>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions pt-2">
            <input type="submit" value="Yes" class="btn btn-primary btn80" />
            <a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-primary btn80">No</a>
        </div>
    }
</div>
