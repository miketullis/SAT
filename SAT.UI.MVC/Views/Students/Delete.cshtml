@model SAT.DATA.EF.Student

@{
    ViewBag.Title = "Withdraw: " + @Model.FullName;
}
<div class="card card-body max1000 drop">
    <h2 class="text-center pb-2">@ViewBag.Title</h2>
    <dl class="dl-horizontal">
        <div class="row p-5">
            <div class="col-md-6">
                <img src="~/Content/assets/images/students/@Model.PhotoUrl" alt="Image of @Model.FullName" title="Image of @Model.FullName" class="pb-5 max90p" />
            </div>
            <div class="col-md-6">
                <dd>
                    <span class="font-weight-bold pr-2">Name:</span>  @Html.DisplayFor(model => model.FullName)
                </dd>
                <dd>
                    <span class="font-weight-bold pr-2">Status:</span> @Html.DisplayFor(model => model.StudentStatus.SSName)
                </dd>
                <dd>
                    <span class="font-weight-bold pr-2">Major: </span>  @Html.DisplayFor(model => model.Major)
                </dd>
                <dd>
                    <span class="font-weight-bold pr-2">Phone:</span>
                    <a href="tel:@Html.DisplayFor(model => model.Phone)">@Html.DisplayFor(model => model.Phone)</a>
                </dd>
                <dd>
                    <span class="font-weight-bold pr-2">Email:</span>

                    <a href="mailto: @Html.DisplayFor(model => model.Email)">@Html.DisplayFor(model => model.Email)</a>
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Address):
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Address) <br />
                    @Html.DisplayFor(model => model.City),
                    @Html.DisplayFor(model => model.State)
                    @Html.DisplayFor(model => model.ZipCode)
                </dd>
            </div>
        </div>
        <h3 class="text-center text-danger">@ViewBag.Display</h3>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <div class="form-actions no-color text-center">
        <input type="submit" value="@ViewBag.ButtonText" class="btn btn-primary btn80" />
        @*@Html.ActionLink("No", "Index", "Students", new { @class = "btn btn-primary btn80" })*@
        <a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-primary btn80">No</a>
    </div>
}
</div>


