@model SAT.DATA.EF.Enrollment

@{
    ViewBag.Title = "Editing Enrollment for " + Model.Student.FullName;
}

<div class="card card-body max800 p-5 drop">
    <h2 class="text-center pb-4">@ViewBag.Title</h2>
    <div class="divCenter">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal p-4">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.EnrollmentId)

                <div class="form-group">
                    @Html.LabelFor(model => model.StudentId, "Student Name", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownList("StudentId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.StudentId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ScheduledClassId, "Scheduled Class", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownList("ScheduledClassId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ScheduledClassId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.EnrollmentDate, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.EnrollmentDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EnrollmentDate, "", new { @class = "text-danger" })
                </div>
            </div>
        }
    </div>
    <div class="form-group">
        <div class="col-md-12 pt-3 text-center">
            <input type="submit" value="Save" class="btn btn-primary btn80" />
            @Html.ActionLink("Delete", "Delete", "Enrollments", new { id = Model.EnrollmentId }, new { @class = "btn btn-primary btn80" })
            @*@Html.ActionLink("Cancel", "Index", "Enrollments", new { @class = "btn btn-primary btn80 mr-0" })*@
            <a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-primary btn80 mr-0">Cancel</a>
        </div>
    </div>
</div>

